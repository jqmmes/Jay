<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pt.up.fc.dcc.hyrax.odlib">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>


    <application
            android:largeHeap="true">
        <service android:name=".services.BrokerAndroidService" android:exported="true" android:permission="android.permission.INTERNET"/>
        <service android:name=".services.WorkerAndroidService" android:exported="true" android:permission="android.permission.INTERNET"/>
        <service android:name=".services.SchedulerAndroidService" android:exported="true" android:permission="android.permission.INTERNET"/>

        <receiver android:name=".services.worker.status.battery.AndroidBatteryMonitor$BatteryChargeStateUpdatesReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".services.worker.status.battery.AndroidBatteryMonitor$BatteryLevelUpdatesReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_CHANGED"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>